    <script>
        // Initialize intl-tel-input for modal phone
        let modalIti;

        function copyCode() {
            const codeBlock = document.querySelector('.code-block code');
            navigator.clipboard.writeText(codeBlock.textContent);
            alert('Code copied to clipboard!');
        }

        // Social Share Functionality
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize intl-tel-input
            const modalPhoneInput = document.querySelector('#modalPhone');
            if (modalPhoneInput) {
                modalIti = window.intlTelInput(modalPhoneInput, {
                    initialCountry: "in",
                    preferredCountries: ["in", "us", "gb", "ae", "sg"],
                    separateDialCode: true,
                    utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"
                });
            }
            const shareButtons = document.querySelectorAll('.share-btn');
            const pageUrl = encodeURIComponent(window.location.href);
            const pageTitle = encodeURIComponent(document.title);

            shareButtons.forEach(btn => {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    const platform = this.getAttribute('data-platform');
                    let shareUrl = '';

                    switch (platform) {
                        case 'linkedin':
                            shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${pageUrl}`;
                            break;
                        case 'twitter':
                            shareUrl = `https://twitter.com/intent/tweet?url=${pageUrl}&text=${pageTitle}`;
                            break;
                        case 'facebook':
                            shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${pageUrl}`;
                            break;
                        case 'whatsapp':
                            shareUrl = `https://wa.me/?text=${pageTitle}%20${pageUrl}`;
                            break;
                    }

                    if (shareUrl) {
                        window.open(shareUrl, '_blank', 'width=600,height=400,noopener,noreferrer');
                    }
                });
            });

            // Show floating button on scroll
            window.addEventListener('scroll', function () {
                const floatingBtn = document.getElementById('floatingContactBtn');
                if (window.scrollY > 300) {
                    floatingBtn.classList.add('visible');
                } else {
                    floatingBtn.classList.remove('visible');
                }
            });
        });

        // Contact Modal Functions
        function openContactModal() {
            document.getElementById('contactModalOverlay').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeContactModal() {
            document.getElementById('contactModalOverlay').classList.remove('active');
            document.body.style.overflow = '';
        }

        // Close on Escape key
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') closeContactModal();
        });

        // Submit Modal Contact Form
        async function submitModalContact(e) {
            e.preventDefault();
            const form = e.target;
            const submitBtn = document.getElementById('modalSubmitBtn');
            const messageDiv = document.getElementById('modalFormMessage');

            submitBtn.querySelector('.btn-text').classList.add('d-none');
            submitBtn.querySelector('.btn-loader').classList.remove('d-none');
            submitBtn.disabled = true;

            // Get country code from intl-tel-input
            let countryCode = '+91';
            let phone = form.phone.value;
            if (modalIti && typeof modalIti.getSelectedCountryData === 'function') {
                const countryData = modalIti.getSelectedCountryData();
                countryCode = '+' + countryData.dialCode;
            }

            const formData = {
                firstName: form.firstName.value,
                lastName: form.lastName.value,
                email: form.email.value,
                countryCode: countryCode,
                phone: phone,
                message: form.message.value
            };

            try {
                const response = await fetch('/api/contact/send', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });
                const result = await response.json();

                if (result.success) {
                    messageDiv.innerHTML = '<div class="alert alert-success py-2 small">Message sent successfully! We\'ll get back to you soon.</div>';
                    form.reset();
                    setTimeout(() => closeContactModal(), 2000);
                } else {
                    messageDiv.innerHTML = '<div class="alert alert-danger py-2 small">Failed to send. Please try again.</div>';
                }
            } catch (error) {
                messageDiv.innerHTML = '<div class="alert alert-danger py-2 small">Network error. Please try again.</div>';
            } finally {
                submitBtn.querySelector('.btn-text').classList.remove('d-none');
                submitBtn.querySelector('.btn-loader').classList.add('d-none');
                submitBtn.disabled = false;
            }
        }
    </script>

