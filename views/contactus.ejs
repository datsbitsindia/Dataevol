    <script src="/js/app.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"></script>
    
    <script>
        var iti;
        $(function(){
            // Character counter and input prevention for message field
            const messageField = $('#about');
            const charCounter = $('#char-counter');
            const maxLength = 500;

            // Update character counter in real-time
            messageField.on('input keyup paste', function() {
                const currentLength = $(this).val().length;
                charCounter.text(currentLength + '/' + maxLength);
                
                // Clear error messages when user starts typing and meets requirements
                if (currentLength >= 10 && currentLength <= maxLength) {
                    clearMessage();
                }
                
                // Visual feedback based on character count
                if (currentLength >= maxLength) {
                    charCounter.removeClass('text-muted text-warning').addClass('text-danger');
                    $(this).addClass('border-danger');
                } else if (currentLength >= maxLength * 0.9) { // 90% of limit (450 chars)
                    charCounter.removeClass('text-muted text-danger').addClass('text-warning');
                    $(this).removeClass('border-danger').addClass('border-warning');
                } else {
                    charCounter.removeClass('text-warning text-danger').addClass('text-muted');
                    $(this).removeClass('border-danger border-warning');
                }
                
                // Validate form and update submit button
                validateForm();
            });

            // Prevent typing beyond limit (but allow backspace, delete, etc.)
            messageField.on('keydown', function(e) {
                const currentLength = $(this).val().length;
                
                // Allow backspace, delete, tab, escape, enter, and arrow keys
                if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
                    // Allow Ctrl+A, Ctrl+C, Ctrl+V, Ctrl+X, Ctrl+Z
                    (e.keyCode === 65 && e.ctrlKey === true) ||
                    (e.keyCode === 67 && e.ctrlKey === true) ||
                    (e.keyCode === 86 && e.ctrlKey === true) ||
                    (e.keyCode === 88 && e.ctrlKey === true) ||
                    (e.keyCode === 90 && e.ctrlKey === true) ||
                    // Allow home, end, left, right, down, up
                    (e.keyCode >= 35 && e.keyCode <= 40)) {
                    return;
                }
                
                // Prevent input if at max length
                if (currentLength >= maxLength) {
                    e.preventDefault();
                    // Show brief visual feedback
                    $(this).addClass('border-danger');
                    setTimeout(() => {
                        if ($(this).val().length < maxLength) {
                            $(this).removeClass('border-danger');
                        }
                    }, 1000);
                }
            });

            // Function to validate form and update submit button state
            function validateForm() {
                const firstName = $('#first_name').val().trim();
                const lastName = $('#last_name').val().trim();
                const email = $('#email').val().trim();
                const phone = $('#phone').val().trim();
                const message = $('#about').val().trim();
                const submitBtn = $('button[type="submit"]');
                
                // Check if all required fields are filled and message meets length requirements
                const isValid = firstName.length > 0 && 
                               lastName.length > 0 && 
                               email.length > 0 && 
                               phone.length > 0 && 
                               message.length >= 10 && 
                               message.length <= 500;
                
                if (isValid) {
                    submitBtn.prop('disabled', false).removeClass('btn-secondary').addClass('btn-primary');
                } else {
                    submitBtn.prop('disabled', true).removeClass('btn-primary').addClass('btn-secondary');
                }
                
                return isValid;
            }

            // Clear error messages when users start filling required fields and validate form
            $('#first_name, #last_name, #email, #phone').on('input', function() {
                if ($(this).val().trim().length > 0) {
                    clearMessage();
                }
                validateForm();
            });

            // Initialize form validation on page load
            validateForm();

            var phoneInput = document.querySelector('#phone');
            if (window.intlTelInput && phoneInput) {
                iti = window.intlTelInput(phoneInput, {
                    separateDialCode: true,
                    initialCountry: 'in',
                    preferredCountries: ['in','us','gb'],
                    utilsScript: 'https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js'
                });
            }

            // Function to show inline messages instead of alerts
            // Enhanced function to show inline messages with better UX
            function showMessage(message, type) {
                const messageDiv = $('#form-message');
                
                // Clear existing classes and hide first
                messageDiv.removeClass('alert-success alert-danger alert-warning').hide();
                
                if (type === 'success') {
                    messageDiv.addClass('alert-success');
                } else if (type === 'error') {
                    messageDiv.addClass('alert-danger');
                } else {
                    messageDiv.addClass('alert-warning');
                }
                
                messageDiv.html(message.replace(/\n/g, '<br>'));
                
                // Smooth fade in with slide effect
                messageDiv.slideDown(300).fadeIn(200);
                
                // Scroll to message
                $('html, body').animate({
                    scrollTop: messageDiv.offset().top - 100
                }, 500);
                
                // Auto-hide success messages after 5 seconds
                if (type === 'success') {
                    setTimeout(function() {
                        messageDiv.slideUp(300);
                    }, 5000);
                }
            }

            // Function to clear messages
            function clearMessage() {
                $('#form-message').slideUp(200);
            }

            $('form').on('submit', async function(e) {
                e.preventDefault();
                
                const firstName = $('#first_name').val().trim();
                const lastName = $('#last_name').val().trim();
                const email = $('#email').val().trim();
                const about = $('#about').val().trim();
                
                // Get phone number and country code from intl-tel-input
                let countryCode = '+91'; // default
                let phone = $('#phone').val().trim();
                
                if (iti && typeof iti.getSelectedCountryData === 'function') {
                    const countryData = iti.getSelectedCountryData();
                    countryCode = '+' + countryData.dialCode;
                    
                    // Get the national number (without country code)
                    if (typeof iti.getNumber === 'function') {
                        const fullNumber = iti.getNumber();
                        phone = fullNumber.replace('+' + countryData.dialCode, '').trim();
                    }
                }

                // Hide any previous messages
                $('#form-message').hide();
                
                // Basic validation - check empty fields
                if (!firstName || !lastName || !email || !phone || !about) {
                    showMessage('Please fill in all required fields', 'error');
                    return;
                }

                // Email validation
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!email.includes('@')) {
                    showMessage('Please include "@" in the email address', 'error');
                    return;
                }
                if (!emailRegex.test(email)) {
                    showMessage('Please enter a valid email address (e.g., name@example.com)', 'error');
                    return;
                }

                // Phone validation - at least 10 digits
                const phoneDigits = phone.replace(/\D/g, '');
                if (phoneDigits.length < 10) {
                    showMessage('Please enter a valid phone number (at least 10 digits)', 'error');
                    return;
                }

                // Message length validation
                if (about.length < 10) {
                    showMessage('Message must be at least 10 characters long', 'error');
                    return;
                }

                if (about.length > 500) {
                    showMessage('Message must be 500 characters or less', 'error');
                    return;
                }

                const formData = {
                    firstName: firstName,
                    lastName: lastName,
                    email: email,
                    countryCode: countryCode,
                    phone: phone,
                    message: about
                };

                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true).html('Sending... <i class="fas fa-spinner fa-spin ms-2"></i>');

                try {
                    // Call the backend API with timeout and retry logic
                    const backendUrl = window.location.origin;
                    console.log('Backend URL:', backendUrl); // Debug log
                    
                    // Create AbortController for timeout
                    const controller = new AbortController();
                    const timeoutId = setTimeout(() => controller.abort(), 30000); // 30 second timeout
                    
                    const response = await fetch(`${backendUrl}/api/contact/send`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(formData),
                        signal: controller.signal
                    });
                    
                    clearTimeout(timeoutId);

                    // Check if response is ok
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    
                    const result = await response.json();

                    if (result.success) {
                        console.log('âœ… Contact message sent successfully:', result);
                        showMessage('ðŸŽ‰ Thank you! Your message has been sent successfully. We will get back to you soon.', 'success');
                        $('form')[0].reset();
                        
                        // Reset character counter
                        charCounter.text('0/' + maxLength);
                        
                        // Reset intl-tel-input
                        if (iti && typeof iti.setNumber === 'function') {
                            iti.setNumber('');
                        }
                        
                        // Reset form validation
                        validateForm();
                    } else {
                        let errorMsg = result.message || 'Failed to send message';
                        
                        // Handle validation errors specifically
                        if (result.errors && result.errors.length > 0) {
                            errorMsg = 'Please fix the following issues:\n';
                            result.errors.forEach(error => {
                                errorMsg += `â€¢ ${error.message}\n`;
                            });
                        }
                        
                        // Show backend error if available
                        if (result.error && !result.errors) {
                            errorMsg += '\n\nError Details: ' + result.error;
                            console.error('Backend Error:', result.error);
                        }
                        
                        showMessage(errorMsg, 'error');
                    }

                } catch (error) {
                    console.error('âŒ Error sending contact message:', error);
                    
                    let errorMessage = 'Failed to send message. Please try again.';
                    
                    if (error.name === 'AbortError') {
                        errorMessage = 'Request timed out. Please check your connection and try again.';
                    } else if (error.message.includes('Failed to fetch')) {
                        errorMessage = 'Network error. Please check your internet connection and try again.';
                    } else if (error.message.includes('HTTP error')) {
                        errorMessage = 'Server error. Please try again later or contact support.';
                    } else if (error.message) {
                        errorMessage += '\n\nError: ' + error.message;
                    }
                    
                    showMessage(errorMessage, 'error');
                } finally {
                    // Re-enable submit button and validate form
                    submitBtn.prop('disabled', false).html('Send Message <i class="far fa-envelope ms-2"></i>');
                    validateForm();
                }
            });
        });
        
    </script>
